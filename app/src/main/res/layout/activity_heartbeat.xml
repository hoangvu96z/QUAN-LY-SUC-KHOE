<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chocco.huy.qlsk.com.chocco.huy.donhiptim.MainHeartbeat"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/TOP"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="32sp"
            android:layout_weight="0.8"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#000"
            android:text="--" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2">



            <com.chocco.huy.qlsk.com.chocco.huy.donhiptim.HeartbeatView android:id="@+id/image"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </com.chocco.huy.qlsk.com.chocco.huy.donhiptim.HeartbeatView>
        </RelativeLayout>

    </LinearLayout>

    <SurfaceView
        android:id="@+id/surfaceView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
